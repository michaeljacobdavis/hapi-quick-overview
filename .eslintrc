{
    "env": {
        "browser": true,
        "amd": true,
        "node": true
    },
    "rules": {
        "brace-style": [2, "1tbs"],
        "camelcase": 0,
        "consistent-return": 0,
        "dot-notation": 0,
        "func-style": [0, "declaration"],
        "space-after-keywords": [2, "always", { "checkFunctionKeyword": true } ],
        "space-before-blocks": [2, "always"],
        "key-spacing": 2,
        "comma-spacing": 2,
        "no-multi-spaces": 2,
        "no-loop-func": 1,
        "no-bitwise": 1,
        "no-console": 0,
        "no-else-return": 1,
        "no-floating-decimal": 2,
        "no-lonely-if": 2,
        "no-lonely-if": 2,
        "no-path-concat": 2,
        "no-plusplus": 2,
        "no-self-compare": 2,
        "no-trailing-spaces": 2,
        "no-undefined": 2,
        "no-underscore-dangle": 0,
        "no-shadow": 0,
        "quotes": [2, "single"],
        "radix": 2,
        "space-infix-ops": 2,
        "space-return-throw-case": 2,
        "space-unary-ops": 2,
        "strict": [0],
        "wrap-iife": [2, "any"]
    }
}
